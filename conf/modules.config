process {

    // METAPROG configuration
    withName: "SAMPLESHEET_CHECK" {
        publishDir = [
            [
                path: { "${params.outdir}/pipeline_info" },
                mode: 'copy',
                overwrite: true
            ]
        ]
    }

    withName: "METAPROG" {
        ext.args = {
                [
                    params.project_name ? "project_name:${params.project_name}" : '',
                    "work_directory:\$PWD"
                ].join(' -P ').trim()
            }
        publishDir = [
            [
                path: { "${params.outdir}/data/${task.process}" },
                pattern: 'data/*',
                mode: 'copy',
                overwrite: true
            ],
            [
                path: { "${params.outdir}/" },
                pattern: 'report/*.html',
                mode: 'copy',
                overwrite: true
            ],
            [
                path: { "${params.outdir}/data/${task.process}" },
                pattern: '_freeze/**/figure-html/*.png',
                saveAs: { file -> file.endsWith('.png') ? "figures/${file.split('/').last()}" : null },
                mode: 'copy',
                overwrite: true
            ],
        ]
    }

}
